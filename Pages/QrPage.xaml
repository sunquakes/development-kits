<Page x:Class="development_kits.Pages.QrPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:development_kits.Pages"
      Title="QrPage">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <local:BoolToHiddenVisibilityConverter x:Key="BoolToHiddenVis" />
        <local:InverseBoolToHiddenVisibilityConverter x:Key="InvBoolToHiddenVis" />
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button Content="Back" Click="Back_Click" Width="80" VerticalAlignment="Center" />
            <TextBlock Text="QR Code" FontSize="18" Margin="10,0" VerticalAlignment="Center" />
            <TextBox x:Name="InputText" Height="30" Width="300" Margin="10,0" VerticalAlignment="Center" VerticalContentAlignment="Center" />
            <Button Content="Generate" Click="Generate_Click" Width="100" Margin="8,0" VerticalAlignment="Center" />
            <Button Content="Clear All" Click="ClearAll_Click" Width="100" Margin="8,0" VerticalAlignment="Center" />
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="Transparent" BorderThickness="1" Margin="0,10,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="LogsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Left column: QR image and text stacked; fixed square area (smaller) -->
                                    <StackPanel Grid.Column="0" Width="200" HorizontalAlignment="Center">
                                        <Grid Width="200" Height="200">
                                            <Image Source="{Binding Image}" Stretch="Uniform" HorizontalAlignment="Center" Width="200" Height="200" Visibility="{Binding IsImageVisible, Converter={StaticResource BoolToHiddenVis}}" />
                                            <Grid Visibility="{Binding IsImageVisible, Converter={StaticResource InvBoolToHiddenVis}}" Background="LightGray" Opacity="0.6">
                                                <TextBlock Text="&#x1F648;" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Grid>
                                        </Grid>
                                        <TextBlock Text="{Binding Text}" Margin="0,8,0,0" TextWrapping="Wrap" TextAlignment="Center" Width="200" />
                                    </StackPanel>

                                    <!-- Right column: controls -->
                                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,0,0,0">
                                        <TextBlock Text="{Binding TimestampString}" HorizontalAlignment="Right" Margin="0,0,0,8" />
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Click="ToggleVisibility_Click" Width="40" Margin="0,0,8,0" ToolTip="Toggle image visibility">
                                                <Grid>
                                                    <TextBlock Text="&#x1F441;" FontSize="16" Visibility="{Binding IsImageVisible, Converter={StaticResource BoolToHiddenVis}}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
                                                    <TextBlock Text="&#x1F648;" FontSize="16" Visibility="{Binding IsImageVisible, Converter={StaticResource InvBoolToHiddenVis}}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
                                                </Grid>
                                            </Button>
                                            <Button Content="Show Only" Click="ShowOnly_Click" Width="80" Margin="0,0,8,0" />
                                            <Button Content="Save..." Click="SaveLog_Click" Width="80" Margin="0,0,8,0" />
                                            <Button Content="Delete" Click="DeleteLog_Click" Width="80" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>