<Page x:Class="development_kits.Pages.JsonFormatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="JsonFormatPage">
    <Grid Margin="20">
        <StackPanel>
            <Button Content="Back" Click="Back_Click" Width="80" />
            <TextBlock Text="JSON Format" FontSize="18" Margin="0,10" />
            <TextBox x:Name="InputText" Height="150" TextWrapping="Wrap" AcceptsReturn="True" />
            <Button Content="Format" Click="Format_Click" Margin="0,10" />
            <TextBox x:Name="OutputText" Height="150" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" />
        </StackPanel>
    </Grid>
</Page>