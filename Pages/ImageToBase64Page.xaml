<Page x:Class="development_kits.Pages.ImageToBase64Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ImageToBase64Page">
    <Grid Margin="20">
        <StackPanel>
            <Button Content="Back" Click="Back_Click" Width="80" HorizontalAlignment="Left" Margin="0,0,0,8" />
            <TextBlock Text="Image -> Base64" FontSize="18" Margin="0,10" />

            <StackPanel Orientation="Horizontal" Margin="0,6">
                <Button Content="选择图片" Click="SelectImage_Click" Width="100" />
                <CheckBox x:Name="IncludeDataUriCheck" Content="包含 data URI 前缀 (data:image/...)" Margin="12,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <Image x:Name="ResultImage" Height="200" Margin="0,8" />

            <StackPanel Orientation="Horizontal" Margin="0,8">
                <TextBlock Text="图片尺寸：" FontWeight="Bold" />
                <TextBlock x:Name="ImageDimensionsText" Text="-" />
                <TextBlock Text="    大小：" FontWeight="Bold" Margin="12,0,0,0" />
                <TextBlock x:Name="ImageSizeText" Text="-" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Text="Base64:" FontWeight="Bold" VerticalAlignment="Center" />
                <Button Content="复制" Click="CopyBase64_Click" Margin="8,0,0,0" Width="60" />
            </StackPanel>

            <TextBox x:Name="Base64Text" Height="180" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
        </StackPanel>
    </Grid>
</Page>